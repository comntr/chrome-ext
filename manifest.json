{
  "name": "Comntr",
  "description": "Post comments to any URL.",
  "version": "1.3",
  "manifest_version": 2,
  "icons": {
    "128": "icons/128.png",
    "48": "icons/48.png",
    "16": "icons/16.png"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "background": {
    "persistent": false,
    "scripts": [
      "src/webext.js",
      "src/config.js",
      "background.js"
    ]
  }, 
  "permissions": [
    "https://comntr.live:42751/*",
    "contextMenus",
    "tabs",
    "storage"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "webext@comntr.io"
    }
  }
}
